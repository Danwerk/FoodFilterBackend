@model WebApp.Areas.Admin.ViewModels.RestaurantSearchModel

@{
    ViewData["Title"] = "Index";
}

<form method="get" asp-action="Index">
    <input asp-for="RestaurantName" type="search" placeholder="Restaurant..."/>
    <input asp-for="City" type="search" placeholder="City..."/>
    <input asp-for="Street" type="search" placeholder="Street..."/>
    <input asp-for="StreetNumber" type="search" placeholder="Street nr..."/>
    <input type="submit" class="btn btn-primary" value="Apply filter"/>

</form>

<table class="table">
    <thead>
    <tr>
        <th>
            Image
        </th>
        <th>
            Restaurant
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th>
            Website
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model.SearchResult != null)
    {
        @foreach (var res in Model.SearchResult)
        {
            <tr>
                <td>
                    @if (res.Images != null && res.Images.Any())
                    {
                        <img src="@Url.Content("~" + res.Images.First().Url)" alt="Restaurant Image" style="max-width: 60px; max-height: 60px;" />
                    }
                </td>
                <td>
                    @res.Name
                </td>
                <td>
                    @res.FullAddress
                </td>
                <td>
                    @res.PhoneNumber
                </td>
                <td>
                    @res.Website
                </td>
            </tr>
        }
    }
    </tbody>
</table>


